<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/logo_height"
                app:srcCompat="@drawable/logoblue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="263dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_label_text"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="Nome"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/login_input"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/max_layout_width"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/birthdate_label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="Data Nascimento"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/birthdate_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:inputType="datetime|date"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/max_layout_width"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cpf_label_text"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="CPF"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/cpf_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/max_layout_width"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/email_label_text"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="Email"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/max_layout_width"
                    android:layout_height="wrap_content"
                    android:gravity="start|right|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phone_label_text"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="Telefone"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/telefone_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:inputType="phone" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rua_label_text"
                    android:layout_width="@dimen/input_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_margin_bottom"
                    android:text="Rua"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/rua_input"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/max_layout_width"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/street_label_text"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="CEP"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/CEP_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/max_layout_width"
                    android:layout_height="wrap_content"
                    android:gravity="start|right|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Bairro_label_text"
                        android:layout_width="@dimen/input_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/label_margin_bottom"
                        android:text="Bairro"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/bairro_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirm_login_button"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:background="@color/Blue"
                    android:text="Cadastrar"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>